<link rel="stylesheet" href="/css/user_profile.css">


<div id="user_profile">
    <div id="profile">
        <img src="/images/user_avatar1.jpg" class="user_profile_img">
        <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">

        <h2>
            <%= profile_user.name %>
        </h2>
        <button class="edit_profile"><a href="/users/editProfile/<%= user.id %>">Edit Profile</a></button>
    </div>
    <div id="content">
        <h4>User Details</h4>
        <span><b>Name: </b>
            <%=profile_user.name%>
        </span><br />
        <span><b>Email: </b>
            <%=profile_user.email%>
        </span><br />
        <span><b>Country: </b> India</span>
    </div>
</div>

