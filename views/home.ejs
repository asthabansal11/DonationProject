<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if (locals.user) { %>
            <form action="/posts/createPost" id="new-post-form" method="POST">
                <textarea name="content" id="" cols="10" rows="3" required></textarea>
                <input type="submit" value="Post" placeholder="Type here...">
            </form>
            <% } %>

                <div id="posts-list-container">
                    <ul>
                        <% for (post of posts) { %>
                            <%- include('_post') -%>
                                <% } %>
                    </ul>
                </div>
    </section>

    <section id="user-friends">
        <h4>Friends</h4>
        <% for(u of all_users) { %>
            <p>
                <a href="/users/profile/<%= u.id %>">
                    <%= u.name %>
                </a>
            </p>
            <% } %>
    </section>
</div>